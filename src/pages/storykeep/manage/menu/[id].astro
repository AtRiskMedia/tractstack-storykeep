---
import StoryKeep from "@layouts/StoryKeep.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import MenuEditor from "@components/storykeep/components/MenuEditor";
import { getMenuById } from "../../../../api/turso";
import { ulid } from "ulid";
import type { AuthStatus, MenuDatum } from "../../../../types";

const { id } = Astro.params;
const create = id === "create";

const user = Astro.locals.user as AuthStatus;
const canonicalURL = new URL(`/storykeep/manage/menu/${id}`, Astro.site).href;

let menu: MenuDatum;

if (create) {
  menu = {
    id: ulid(),
    title: "",
    theme: "default",
    optionsPayload: [],
  };
} else {
  if (!id) return Astro.redirect("/404");
  menu = (await getMenuById(id)) as MenuDatum;
  if (!menu) return Astro.redirect("/404");
}

const menuPayload: MenuDatum = {
  id: `storykeep`,
  title: "Story Keep Menu",
  theme: "default",
  optionsPayload: [
    {
      name: "Dashboard",
      description: "Your Story Keep Dashboard",
      featured: true,
      actionLisp: "(goto (storykeep dashboard))",
      to: "/storykeep",
      internal: true,
    },
    {
      name: "Logout",
      description: "Close this session",
      featured: true,
      actionLisp: "(goto (storykeep logout))",
      to: "/storykeep/logout",
      internal: true,
    },
  ],
};
---

<StoryKeep
  title={create ? "Create New Menu" : `Edit Menu: ${menu.title}`}
  canonicalURL={canonicalURL}
>
  <Header
    title={create ? "Create New Menu" : `Edit Menu: ${menu.title}`}
    menu={menuPayload}
    slug={`storykeep-manage-menu-${id}`}
    isContext={false}
    user={user}
    isStoryKeep={true}
    isEditable={false}
  />
  <main id="main-content" class="min-h-screen">
    <div class="px-1.5 pt-1.5 pb-0 pr-0 pl-1.5 py-1.5">
      <div class="py-1.5 bg-white px-3.5">
        <MenuEditor
          menu={menu}
          onCancel={() => {
            // This function will be called client-side
            window.location.href = "/storykeep/manage/menu";
          }}
          onSave={updatedMenu => {
            // This function will be called client-side
            console.log("Save", updatedMenu);
            // TODO: Implement actual save logic
            window.location.href = "/storykeep/manage/menu";
          }}
          client:load
        />
      </div>
    </div>
  </main>
  <Footer
    menu={menuPayload}
    backToTop={true}
    slug={`storykeep-manage-menu-${id}`}
    isContext={false}
  />
</StoryKeep>
