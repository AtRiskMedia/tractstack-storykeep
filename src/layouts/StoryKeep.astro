---
import { LOCALE, SITE } from "@config";
import { ViewTransitions } from "astro:transitions";
import SetContentMap from "../components/SetContentMap";
import { getContentMap, isTursoReady } from "../api/turso";
import { getSetupChecks } from "../utils/setupChecks";
import type { ContentMap } from "../types";

export interface Props {
  canonicalURL: string;
  title?: string;
  pubDatetime?: Date;
  modDatetime?: Date | null;
  scrollSmooth?: boolean;
  ogImage?: string;
}

const {
  title,
  ogImage,
  canonicalURL,
  pubDatetime,
  modDatetime,
  scrollSmooth = true,
} = Astro.props;

const siteTitle = SITE.title;
const author = SITE.author;
const description = SITE.desc;
const website = SITE.website;

const defaultSocialImageURL =
  typeof import.meta.env.PUBLIC_OG === `string` && import.meta.env.PUBLIC_OG
    ? import.meta.env.PUBLIC_OG
    : `og.png`;
const defaultSocialLogoURL =
  typeof import.meta.env.PUBLIC_OGLOGO === `string` &&
  import.meta.env.PUBLIC_OGLOGO
    ? import.meta.env.PUBLIC_OGLOGO
    : `logo.png`;
const defaultSocialTitle = import.meta.env.PUBLIC_OGTITLE;
const defaultSocialAuthor = import.meta.env.PUBLIC_OGAUTHOR;
const defaultSocialDesc = import.meta.env.PUBLIC_OGDESC;
const socialImageURL = `${website}/${ogImage ?? defaultSocialImageURL ?? `og.png`}`;
const socialLogoURL = `${website}/${defaultSocialLogoURL ?? `logo.png`}`;
const storykeepCss = `/styles/storykeep.css`;

const { hasTurso } = getSetupChecks();
const hasTursoReady = hasTurso ? await isTursoReady() : false;
const contentMap: ContentMap[] =
  hasTurso && hasTursoReady ? await getContentMap() : [];
---

<!doctype html>
<html
  lang=`${LOCALE.lang ?? "en"}`
  class={`${scrollSmooth && "motion-safe:scroll-smooth"}`}
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- Custom styles -->
    <link rel="stylesheet" href="/styles/custom.css" />
    <link rel="stylesheet" href={storykeepCss} />

    <!-- General Meta Tags -->
    <title>{title ?? defaultSocialTitle ?? siteTitle}</title>
    <meta name="title" content={title ?? defaultSocialTitle ?? siteTitle} />
    <meta name="description" content={defaultSocialDesc ?? description} />
    <meta name="author" content={defaultSocialAuthor ?? author} />
    <link rel="sitemap" href="/sitemap.xml" />

    <!-- Open Graph / Facebook -->
    <meta
      property="og:title"
      content={title ?? defaultSocialTitle ?? siteTitle}
    />
    <meta property="og:type" content="website" />
    <meta
      property="og:description"
      content={defaultSocialDesc ?? description}
    />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:logo" content={socialLogoURL} />

    <!-- Article Published/Modified time -->
    {
      pubDatetime && (
        <>
          <meta
            property="article:published_time"
            content={pubDatetime.toISOString()}
          />
        </>
      )
    }
    {
      modDatetime && (
        <>
          <meta
            property="article:modified_time"
            content={modDatetime.toISOString()}
          />
        </>
      )
    }

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta
      property="twitter:title"
      content={title ?? defaultSocialTitle ?? siteTitle}
    />
    <meta
      property="twitter:description"
      content={defaultSocialDesc ?? description}
    />
    <meta property="twitter:image" content={socialImageURL} />

    <!-- Tract Stack Concierge -->
    <script>
      import {
        startLoadingAnimation,
        stopLoadingAnimation,
        handleScroll,
        scrollToTop,
        debounce,
      } from "../utils/helpers";
      import { init } from "../utils/init";

      function setupEventHandlers() {
        // Set up animation event listeners
        document.addEventListener(
          "astro:before-preparation",
          startLoadingAnimation
        );
        document.addEventListener("astro:after-swap", stopLoadingAnimation);
      }

      // Initial setup
      setupEventHandlers();

      // controls scrollToTop button visibility
      const debouncedHandleScroll = debounce(handleScroll, 50);

      document.addEventListener("astro:page-load", () => {
        setupEventHandlers();
        handleScroll();
        init();
        scrollToTop();
        document.addEventListener("scroll", debouncedHandleScroll);
      });
    </script>

    <ViewTransitions />
  </head>
  <body>
    <div
      id="loading-indicator"
      class="fixed top-0 left-0 w-full h-1 bg-myorange transform scale-x-0 transition-transform duration-300 ease-out z-50"
    >
    </div>
    <SetContentMap payload={contentMap} client:load />
    <div id="content" class="transition-opacity duration-300">
      <slot />
    </div>
  </body>
</html>
